        static void Main(string[] args)
        {
            string messenge;
            int repeat;

            Console.Write("Что вы хотите написать: ");
            messenge = Console.ReadLine();
            Console.Write("Сколько повторений сделать: ");
            repeat = Convert.ToInt32(Console.ReadLine());

            while (repeat-- > 0)
            {
                Console.WriteLine(messenge);
            }
        }
