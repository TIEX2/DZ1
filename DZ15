        static void Main(string[] args)
        {
            string password = "StarWars";
            string secretMessenge = "May the Force be with you";
            int tryCount = 3;
            int endProgram = 0;
            string userInput;

            Console.WriteLine($"Введите пароль, чтобы получить секретное сообщение! У вас всего {tryCount} попытки.");

            for(int i = endProgram; i < tryCount; i++)
            {
                Console.Write("Пароль: ");
                userInput = Console.ReadLine();

                if(userInput == password)
                {
                    Console.WriteLine(secretMessenge);
                    break;
                }
                else
                {
                    Console.WriteLine("Неверно. Попробуйте снова. ");
                }
            }
        }
