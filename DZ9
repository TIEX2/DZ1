        static void Main(string[] args)
        {
            bool isWorking = false;
            string userInput;
            string password = "Exit";

            while (isWorking == false)
            {
                Console.Write("Введите пароль, чтобы остановить колесо: ");
                userInput = Console.ReadLine();

                if (userInput == password)
                {
                    Console.WriteLine("Колесо остановилось!");
                    isWorking = true;
                }
                else
                {
                    Console.WriteLine("Колесо крутится дальше!");
                    isWorking = false; 
                }
            }
        }
