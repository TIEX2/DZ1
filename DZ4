    internal class Program
    {
        static void Main(string[] args)
        {
            int picturesInRow = 3;
            int allPictures = 52;
            int rows = allPictures / picturesInRow;
            int remainingPictures = allPictures % picturesInRow;

            Console.WriteLine($"Рядов заполнено - {rows}. Картинок осталось сверх меры - {remainingPictures}");
        }
